@{
    ViewData["Title"] = "Explore Products";
}
<section class="hero">
    <h1>Scalable retail backend, powered by Azure Storage.</h1>
    <p>Table Storage for flexible data, Blob Storage for media, Queues for resilience through a clean MVC.</p>
    <div class="flex">
        <a class="btn" href="/Product">Browse Products</a>
        <a class="btn outline" href="/Order/Create">Place Order</a>
    </div>
</section>
<section>
    <h2 style="font-size:24px;margin:40px 0 10px;">Quick Links</h2>
    <div class="grid" style="margin-top:10px;">
        <div class="card">
            <div class="tag">Products</div>
            <h3 style="margin:4px 0 6px;font-size:18px;">Manage Catalog</h3>
            <p style="margin:0 0 14px;color:var(--muted);font-size:14px;">Add new products with images stored in Blob Storage.</p>
            <a class="btn" href="/Product">Open</a>
        </div>
        <div class="card">
            <div class="tag">Orders</div>
            <h3 style="margin:4px 0 6px;font-size:18px;">Place & Track</h3>
            <p style="margin:0 0 14px;color:var(--muted);font-size:14px;">Submit orders; processing flows through queues.</p>
            <a class="btn" href="/Order/Create">New Order</a>
        </div>
        <div class="card">
            <div class="tag">Images</div>
            <h3 style="margin:4px 0 6px;font-size:18px;">Automatic Thumbnails</h3>
            <p style="margin:0 0 14px;color:var(--muted);font-size:14px;">Blob-triggered Functions generate performant thumbnails.</p>
            <a class="btn outline" href="/Product">See In Action</a>
        </div>
    </div>
</section>
