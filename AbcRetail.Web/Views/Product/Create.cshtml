@model AbcRetail.Core.Models.Product
@{
    ViewData["Title"] = "Create Product";
}
<div class="flex" style="justify-content:space-between;align-items:center;">
    <h2 style="margin:0;font-size:28px;">Create Product</h2>
    <a href="@Url.Action("Index")" class="btn outline">Back</a>
</div>
<form asp-action="Create" method="post" enctype="multipart/form-data" style="margin-top:24px;max-width:760px;">
    @Html.AntiForgeryToken()
    <div class="form-grid">
        <div>
            <label>Name</label>
            <input asp-for="Name" type="text" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>
        <div>
            <label>Category</label>
            <input asp-for="Category" type="text" />
            <span asp-validation-for="Category" class="text-danger small"></span>
        </div>
        <div>
            <label>Price</label>
            <input asp-for="Price" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger small"></span>
        </div>
        <div>
            <label>Quantity</label>
            <input asp-for="Quantity" type="number" min="0" />
            <span asp-validation-for="Quantity" class="text-danger small"></span>
        </div>
        <div style="grid-column:1/-1;">
            <label>Description</label>
            <textarea asp-for="Description" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger small"></span>
        </div>
        <div>
            <label>Image</label>
            <input type="file" name="image" />
        </div>
    </div>
    <div style="margin-top:30px;">
        <button type="submit" class="btn">Save Product</button>
    </div>
</form>
<partial name="_ValidationScriptsPartial" />
